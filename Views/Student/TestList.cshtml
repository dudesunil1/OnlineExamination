@model IEnumerable<OnlineExamination.Models.TestStudent>

@{
    ViewBag.Title = "Test List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="text-center">Test List</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 text-end">
          
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            No tests available.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().TS_StartTime)</th>
                        <th>@Html.DisplayNameFor(model => model.First().TS_TestId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Test_Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Test_Duration)</th>
                        <th>@Html.DisplayNameFor(model => model.First().TS_StudId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().TS_StudName)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TS_StartTime</td>
                            <td>@item.TS_TestId</td>
                            <td>@item.Test_Name</td>
                            <td>@item.Test_Duration</td>
                            <td>@item.TS_StudId</td>
                            <td>@item.TS_StudName</td>
                            <td>
                                <a href="@Url.Action("TestDetails", "Student", new { id = item.TS_Id })" class="btn btn-success btn-sm">Start Test</a>
                                <a href="@Url.Action("Details", "Test", new { id = item.TS_Id })" class="btn btn-info btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
</div>
